.row.xepan-push
  .col-md-6
    strong Reminder Task Name: 
    {$task_name}
  .col-md-6
    strong Task Starting Time: 
    {$starting_date}
.row.xepan-push
  .col-md-12
    strong Description:
    {$description}    
.row
  .col-md-6  
    .panel.panel-primary.panel-heading.strong 
      b  Set Task Reminder
      hr
      .panel-body
        .row.xepan-push
          .col-md-12
            strong Remind Medium:    
            {$remind_via}
        .row.xepan-push
          .col-md-12
            strong Remind To:
            {$notify_to}
        .row
          .col-md-6
            strong Remind Value:
            {$remind_value}
          .col-md-6
            strong Remind Unit:
            {$remind_unit}
        span.small.text-muted Hint: Value = '10', Unit = 'Minutes' to get reminded 10 minutes before task starts     
  .col-md-6
    .panel.panel-primary.panel-heading
      b Make Task Periodically Recur
      hr
      .panel-body
        .row
          .col-md-4
            strong Repeat Task:
            br 
            {$is_recurring}
          .col-md-8
            strong Time Gap:    
            {$recurring_span}    
 
