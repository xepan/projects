.row.xepan-push
  .col-md-4.atk-form-field.atk-form-row
    strong Task/Request Name: 
    {$task_name}
  .col-md-4.atk-form-field.atk-form-row
    strong Assign To: 
    {$assign_to_id} {$assign_to}
  .col-md-4.atk-form-field.atk-form-row
    strong Task/Request Priority: 
    {$priority}
.row.xepan-push
  .col-md-4.atk-form-field.atk-form-row
    strong Starting Date: 
    {$starting_date}
  .col-md-4.atk-form-field.atk-form-row
    strong Deadline: 
    {$deadline}
  .col-md-4.atk-form-field.atk-form-row
    strong Estimate Time: 
    {$estimate_time}
    span.small.text-muted Hint : Enter value in hours
.row.xepan-push
  .col-md-12.atk-form-field.atk-form-row
  strong Description:
  {$description1}
  {$description} 

.row
  .col-md-6.atk-form-field.atk-form-row
    .panel.panel-primary.panel-heading
      b Make Task Periodically Recur
      hr
      .panel-body
        .row
          .col-md-4.atk-form-field.atk-form-row
            strong Repeat Task:
            br 
            {$is_recurring}
          .col-md-8.atk-form-field.atk-form-row
            strong Time Gap:    
            {$recurring_span}    
  .col-md-6.atk-form-field.atk-form-row  
    .panel.panel-primary.panel-heading.strong 
      b  Set Task Reminder
      hr
      .panel-body
        .row.xepan-push
          .col-md-4.atk-form-field.atk-form-row
            strong Set Reminder:
            br 
            {$set_reminder}
          .col-md-8.atk-form-field.atk-form-row
            strong Remind Medium:    
            {$remind_via}
        .row.xepan-push
          .col-md-12.atk-form-field.atk-form-row
            strong Remind Corresponding To:    
            {$reminder_time_compare_with}
            span.small.text-muted Hint: If you want reminder x minutes before deadline then select deadline     
        .row.xepan-push
          .col-md-12.atk-form-field.atk-form-row
            strong Remind To:
            {$notify_to}
        .row
          .col-md-6.atk-form-field.atk-form-row
            strong Remind Value:
            {$remind_value}
          .col-md-6.atk-form-field.atk-form-row
            strong Remind Unit:
            {$remind_unit}
        span.small.text-muted Hint: Value = '10', Unit = 'Minutes' to get reminded 10 minutes before task starts     
 
style(type='text/css', media='screen').
  .panel{
  }