.row.xepan-push
  .col-md-4
    strong Task Name: 
    {$task_name}
  .col-md-4
    strong Assign To: 
    {$employee_id}
  .col-md-4
    strong Task Priority: 
    {$priority}
.row.xepan-push
  .col-md-4
    strong Starting Date: 
    {$starting_date}
  .col-md-4
    strong Deadline: 
    {$deadline}
  .col-md-4
    strong Estimate Time: 
    {$estimate_time}
    span.small.text-muted Hint : Enter value in hours
.row.xepan-push
  .col-md-12
  strong Description:
  {$description}

.row
  .col-md-6
    .panel.panel-primary.panel-heading
      b Make Task Periodically Recur
      hr
      .panel-body
        .row
          .col-md-4
            strong Repeat Task:
            br 
            {$is_recurring}
          .col-md-8
            strong Time Gap:    
            {$recurring_span}    
  .col-md-6  
    .panel.panel-primary.panel-heading.strong 
      b  Set Task Reminder
      hr
      .panel-body
        .row.xepan-push
          .col-md-4
            strong Set Reminder:
            br 
            {$set_reminder}
          .col-md-8
            strong Remind Medium:    
            {$remind_via}
        .row.xepan-push
          .col-md-12
            strong Remind To:
            {$notify_to}
        .row
          .col-md-6
            strong Remind Value:
            {$remind_value}
          .col-md-6
            strong Remind Unit:
            {$remind_unit}
        span.small.text-muted Hint: Value = '10', Unit = 'Minutes' to get reminded 10 minutes before task starts     
 
style(type='text/css', media='screen').
  .panel{
  }