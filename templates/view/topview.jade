.row(id="{$_name}")
  .main-box
    header.main-box-header.clearfix
      .row
        .col-md-3
        .col-md-6.text-center
          h1 {$name}
        .col-md-3  
          .pull-right.top-page-ui
            span(data-id="{$id}")
              a.btn.btn-primary.pull-right(href="#" style="margin-top:10px;")
                i.fa.fa-plus-circle.fa-lg.add-task &nbsp; Add New Task
      .row
        .col-md-3
          {$selfprogress}
        .col-md-6
          .text-center 
            a(href!='?page=xepan_projects_projectdetail&project_id={$id}') 
             |Tasks
            a(href!="{url}index.php?page=xepan_projects_projectlive&project_id={$id}{/}") 
             |Status
            a(href!="?page=xepan_projects_calendar&project_id={$id}") 
             |Calendar
            a(href!="?page=xepan_projects_progress&project_id={$id}") 
             |Conversation
            a(href!="?page=xepan_projects_files&project_id={$id}") 
             |Files
        .col-md-3
          {$totalprogress}